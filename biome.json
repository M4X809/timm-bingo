{
	"$schema": "https://biomejs.dev/schemas/1.6.3/schema.json",
	"organizeImports": {
		"enabled": true,
		"ignore": ["**/.vscode/**/*", "out/**/*", "dist/**/*", "*.code-workspace", "settings.json", "*.js"]
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": true,
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 160,
		"ignore": ["**/.vscode/**/*", "out/**/*", "dist/**/*", "*.code-workspace", "settings.json", "*.js"]
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double",
			"attributePosition": "multiline",
			"bracketSameLine": true,
			"enabled": true
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "off"
			},
			"style": {
				"noNonNullAssertion": "off"
			},
			"complexity": {
				"noBannedTypes": "off"
			}
		},
		"ignore": ["node_modules/**/*", "biome.json", "build/**/*", "**/.vscode/**/*", "out/**/*", "dist/**/*", "*.code-workspace", "settings.json", "*.js"]
	}
}
